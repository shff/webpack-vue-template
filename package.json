{
  "license": "MIT",
  "scripts": {
    "server": "webpack-dev-server --hot --inline",
    "watch": "webpack -w",
    "build": "webpack --mode production",
    "rebuild": "yarn clean && yarn build",
    "clean": "rm -rf dist",
    "prettify": "prettier --write \"app/**/*.{js,ts,vue}\" \"app/*.{js,ts,vue}\"",
    "lint": "eslint \"app/*.{js,ts,vue}\" \"app/**/*.{js,ts,vue}\"",
    "lint:css": "stylelint '**/*.less' '**/*.vue' --syntax less",
    "lint:watch": "esw \"app/**/*.{js,ts,vue}\" -w --color --clear",
    "test": "jest",
    "e2e": "cypress run -C false --config video=false,integrationFolder=app,supportFile=false,pluginsFile=false,testFiles=**/*.spec.ts"
  },
  "dependencies": {
    "vue": "^2.6.14"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-proposal-optional-chaining": "^7.14.2",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-stage-1": "^7.8.3",
    "@babel/runtime": "^7.17.2",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.6.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.5.3",
    "optimize-css-assets-webpack-plugin": "^6.0.1",
    "stylus": "^0.56.0",
    "stylus-loader": "^6.2.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "vue-loader": "^15.9.8",
    "vue-template-compiler": "^2.6.14",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "yaml-loader": "^0.6.0"
  },
  "optionalDependencies": {
    "@types/cypress": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "babel-eslint": "^10.1.0",
    "cypress": "^9.5.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^8.4.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-vue-preprocessor": "^1.7.1",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "stylelint": "^14.5.1",
    "stylelint-config-standard": "^25.0.0",
    "vue-eslint-parser": "^8.2.0"
  },
  "browserslist": [
    ">0.25%",
    "not ie 11",
    "not op_mini all"
  ],
  "jest": {
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
    },
    "modulePathIgnorePatterns": [
      "/node_modules/",
      "./webpack.config.js"
    ]
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules/",
      "webpack.config.js"
    ],
    "extends": [
      "plugin:vue/essential",
      "plugin:@typescript-eslint/eslint-plugin/recommended",
      "plugin:prettier/recommended",
      "plugin:promise/recommended",
      "eslint:recommended",
      "plugin:cypress/recommended"
    ],
    "plugins": [
      "@typescript-eslint/eslint-plugin",
      "vue",
      "prettier",
      "promise",
      "cypress"
    ],
    "env": {
      "cypress/globals": true
    },
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "globals": {
      "document": true
    },
    "rules": {
      "import/no-unresolved": "off",
      "prettier/prettier": "error",
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "react/no-unknown-property": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,md,vue}": [
      "prettier --write",
      "eslint"
    ]
  }
}
